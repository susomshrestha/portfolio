---
import SectionHeading from './SectionHeading.astro';

const projects = [
	{
		gitLink: 'https://github.com/susomshrestha/wordle-clone',
		link: 'https://susomshrestha.github.io/wordle-clone/',
		src: '/images/wordle.png',
		title: 'Wordle Clone',
		desc: 'A simple clone of the popular game Wordle.',
	},
	{
		gitLink: 'https://github.com/susomshrestha/my_stash',
		link: '',
		src: '/images/my_stash.png',
		title: 'My Stash',
		desc: 'A Flutter-based personal password management application designed for securely storing and managing passwords.',
	},
];
---

<div class="max-w-screen-xl mx-auto px-12 py-12 md:py-32">
	<SectionHeading title="Projects" />
	<div class="grid items-stretch w-full grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-7 mt-7">
		{
			projects.map((proj) => (
				<div class="relative cursor-pointer flex flex-col items-stretch p-7 sm:p-3 group h-100 rounded-2xl border border-border duration-300 ease-out hover:-translate-x-1 hover:-translate-y-1">
					<span class="block w-full">
						<img src={proj.src} class="w-full h-auto rounded-lg aspect-[16/9] object-contain" />
					</span>
					<span class="block w-full px-1 mt-5 mb-1 sm:mt-3">
						<span class="mb-0 text-base font-semibold tracking-tight text-text-primary">
							<span>{proj.title}</span>
						</span>
						<span class="text-sm text-text-secondary block truncate">{proj.desc}</span>
					</span>
					<span class="w-full px-1 mt-5 mb-1 sm:mt-3 flex items-center">
						{proj.link && (
							<a href={proj.link} target="_blank" class="mr-2 hover:opacity-50">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
									<title>External Link</title>
									<path
										fill="currentColor"
										d="M18 10.82a1 1 0 0 0-1 1V19a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V8a1 1 0 0 1 1-1h7.18a1 1 0 0 0 0-2H5a3 3 0 0 0-3 3v11a3 3 0 0 0 3 3h11a3 3 0 0 0 3-3v-7.18a1 1 0 0 0-1-1Zm3.92-8.2a1 1 0 0 0-.54-.54A1 1 0 0 0 21 2h-6a1 1 0 0 0 0 2h3.59L8.29 14.29a1 1 0 0 0 0 1.42a1 1 0 0 0 1.42 0L20 5.41V9a1 1 0 0 0 2 0V3a1 1 0 0 0-.08-.38Z"
									/>
								</svg>
							</a>
						)}
						<a href={proj.gitLink} target="_blank" class="hover:opacity-50">
							<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
								<title>Github</title>
								<path
									fill="currentColor"
									d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"
								/>
							</svg>
						</a>
					</span>
				</div>
			))
		}
	</div>
</div>
