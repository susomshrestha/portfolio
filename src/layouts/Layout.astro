---
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';

interface Props {
	title: string;
	image?: string;
}

const { title, image = '/images/logo.png' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/images/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={image} />
		<meta property="og:title" content="Susom Shrestha - Portfolio Website" />
		<meta property="”og:type”" content="”website”" />
		<meta property="og:url" content="https://susomshrestha.com/" />
		<meta property="og:site_name" content="Susom Shrestha - Portfolio Website" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-background">
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		/* Surfaces */
		--surface-background: 245, 245, 245;
		--surface-border: 212, 212, 212;
		--surface-card: 255, 255, 255;

		/* Text */
		--text-primary: 23, 23, 23;
		--text-secondary: 115, 115, 115;

		/* Accents */
		--accent-primary: 23, 23, 23;
		--text-on-accent: 255, 255, 255;

		background: rgba(var(--surface-background));
	}

	.dark {
		/* Surfaces */
		--surface-background: 0, 0, 0;
		--surface-border: 38, 38, 38;
		--surface-card: 23, 23, 23;

		/* Text */
		--text-primary: 250, 250, 250;
		--text-secondary: 115, 115, 115;

		/* Accents */
		--accent-primary: 250, 250, 250;
		--text-on-accent: 0, 0, 0;

		background: rgba(var(--surface-background));
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
